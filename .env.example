# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=5000
HOST=localhost

# ============================================
# DATABASE CONFIGURATION
# ============================================
MONGODB_URI=mongodb://127.0.0.1:27017/ai-smart
DB_NAME=ai-smart

# ============================================
# JWT & SECURITY
# ============================================
JWT_SECRET=Key

# ============================================
# OPENAI CONFIGURATION (Optional for now)
# ============================================
OPENAI_API_KEY=sk-placeholder-add-later
OPENAI_MODEL=gpt-4-turbo-preview

# ============================================
# FACEBOOK CONFIGURATION (Optional for now)
# ============================================
FACEBOOK_APP_ID=placeholder-add-later
FACEBOOK_APP_SECRET=placeholder-add-later
FACEBOOK_GRAPH_API_VERSION=v18.0

# ============================================
# LINKEDIN CONFIGURATION (Optional for now)
# ============================================
LINKEDIN_CLIENT_ID=placeholder-add-later
LINKEDIN_CLIENT_SECRET=placeholder-add-later

# ============================================
# IMAGE PROCESSING
# ============================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# ============================================
# SCHEDULER CONFIGURATION
# ============================================
SCHEDULER_CRON=0 9 * * *
SCHEDULER_ENABLED=true

# ============================================
# CORS CONFIGURATION
# ============================================
FRONTEND_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# ============================================
# API RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# TRENDING TOPICS CONFIGURATION
# ============================================
TRENDING_API_PROVIDER=newsapi
TRENDING_API_KEY=placeholder-add-later
